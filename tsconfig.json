{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2015.Proxy", "ES2015.Symbol", "ESNEXT"],
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "newLine": "LF",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*", "reflect-metadata/typings.d.ts"]
}
